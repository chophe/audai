# AudAI Configuration Template
# Copy this file to .env and fill in your API keys and settings

# Output Directory
OUTPUT_DIR=./output

# Default Models
DEFAULT_TTS_MODEL=openai_tts
DEFAULT_WHISPER_MODEL=openai_whisper
DEFAULT_TALK_MODEL=openai_realtime

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_BASE_URL=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_TTS_DEPLOYMENT=tts-deployment
AZURE_WHISPER_DEPLOYMENT=whisper-deployment
AZURE_REALTIME_DEPLOYMENT=gpt-4o-realtime-deployment

# Anthropic Configuration (for future audio support)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Google Cloud Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_BASE_URL=https://speech.googleapis.com/v1
GOOGLE_TTS_MODEL=standard
GOOGLE_WHISPER_MODEL=latest_long

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1

# Local/Self-hosted Configuration
LOCAL_TTS_BASE_URL=http://localhost:8000
LOCAL_WHISPER_BASE_URL=http://localhost:8001
LOCAL_TALK_BASE_URL=http://localhost:8002

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
HUGGINGFACE_TTS_MODEL=microsoft/speecht5_tts
HUGGINGFACE_WHISPER_MODEL=openai/whisper-large-v3

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_BASE_URL=https://api.deepgram.com/v1
DEEPGRAM_MODEL=nova-2

# Replicate Configuration
REPLICATE_API_TOKEN=your_replicate_api_token_here
REPLICATE_BASE_URL=https://api.replicate.com/v1

# Audio Settings
AUDIO_FORMAT=mp3
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
RECORD_STOP_KEY=space
RECORD_TIMEOUT=30

